def kidsWithCandies(list, int):
    larg = list[0]
    result = []
    #I am running the max below and using it in the range later on
    for i in list:
        if i >= larg:
            larg = i
    
    #need to use range here to be able to use
    #list[i]
    for i in range(len(list)):
        
        if list[i] >= larg:
            larg = list[i]
        if list[i] + int >= larg:
                print(result.append(True))
        else:
                print(result.append(False))
    return result   
            
    
    
kidsWithCandies([2,8,7], 1)
